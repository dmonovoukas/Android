<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/yellow_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/light_off" />

    <ImageView
        android:id="@+id/red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yellow_light"
        android:layout_alignLeft="@+id/yellow_light"
        android:src="@drawable/light_off" />

    <ImageView
        android:id="@+id/green_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yellow_light"
        android:layout_below="@+id/yellow_light"
        android:src="@drawable/light_off" />

    <Button
        android:id="@+id/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="#E0E0E0"
        android:text="Red"
        android:textColor="#000000" />

    <Button
        android:id="@+id/yellow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/red_button"
        android:layout_alignBottom="@+id/red_button"
        android:layout_centerHorizontal="true"
        android:background="#E0E0E0"
        android:text="Yellow"
        android:textColor="#000000" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yellow_button"
        android:layout_alignBottom="@+id/yellow_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="#E0E0E0"
        android:text="Green"
        android:textColor="#000000" />

</RelativeLayout>
